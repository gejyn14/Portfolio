<% layout('layouts/boilerplate')%>
<div class="container">
  <h2>Board</h2>
  <h4>All posts made by Yu Jin</h4>
</div>

<% for (let blogpost of blogposts) {%>
<div class="card mb-3" style="max-width: 720px">
  <div class="row">
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=blogpost.title%></h5>
        <p class="card-text"><%=blogpost.content%></p>
        <p class="card-text">
          <small class="text-muted">Last updated 3 mins ago</small>
        </p>
      </div>
    </div>
    <div class="col-md-4">
      <img class="img-fluid" src="<%=blogpost.images[0].url%>" alt="..." />
    </div>
    <a href="/board/<%=blogpost._id%>">Details</a>
  </div>
</div>
<%}%>
