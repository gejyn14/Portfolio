<% layout('layouts/boilerplate')%>
<div class="row mb-3">
  <h1 class="text-center">New Post</h1>
  <div class="col-md-8 offset-md-2">
    <form
      action="/board"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="blogpost[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Content</label>
        <textarea
          class="form-control h-25"
          rows="25"
          type="text"
          id="content"
          name="blogpost[content]"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <label for="">Upload Images</label>
      <div class="form-file custom-file mb-3">
        <input
          type="file"
          class="form-file-input"
          id="image"
          name="image"
          multiple
        />
        <label class="form-file-label" for="image">
          <span class="form-file-text custom-file-label">Choose images...</span>
          <span class="form-file-button">Browse</span>
        </label>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Blogpost</button>
      </div>
    </form>
    <a href="/board">All Posts</a>
  </div>
</div>
